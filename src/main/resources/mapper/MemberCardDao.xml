<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.crud.dao.MemberCardDao">

    <resultMap type="com.atguigu.crud.entity.MemberCard" id="MemberCardMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="msId" column="ms_id" jdbcType="VARCHAR"/>
        <result property="money" column="money" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
        <result property="cardNo" column="card_no" jdbcType="VARCHAR"/>
        <result property="msName" column="ms_name" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MemberCardMap">
        select
          id, ms_id, money, card_no, create_time,status
        from member_card
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="findList" resultMap="MemberCardMap">
        select
          c.id, c.ms_id, c.money, c.card_no, c.status,m.ms_name,DATE_FORMAT(c.create_time,'%Y-%m-%d %H:%i:%s') create_time
        from member_card c
        left join member m on c.ms_id = m.id
        <where>
            <if test="id != null">
                and c.id = #{id}
            </if>
            <if test="msId != null and msId != ''">
                and c.ms_id = #{msId}
            </if>
            <if test="money != null and money != ''">
                and c.money = #{money}
            </if>
            <if test="cardNo != null and cardNo != ''">
                and c.card_no = #{cardNo}
            </if>
            <if test="createTime != null">
                and c.create_time = #{createTime}
            </if>
        </where>
        order by c.create_time desc
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into member_card(ms_id, money, card_no, create_time,status)
        values (#{msId}, #{money}, #{cardNo}, now(),#{status})
    </insert>


    <!--通过主键修改数据-->
    <update id="update">
        update member_card
        <set>
            <if test="msId != null and msId != ''">
                ms_id = #{msId},
            </if>
            <if test="money != null and money != ''">
                money = #{money},
            </if>
            <if test="cardNo != null and cardNo != ''">
                card_no = #{cardNo},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from member_card where id = #{id}
    </delete>

</mapper>

